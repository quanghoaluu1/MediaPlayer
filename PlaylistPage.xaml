<Page x:Class="MediaPlayer.PlaylistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediaPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
         Height="600" Width="1000"

      Title="PlaylistPage">

    <Grid>
        <!--Playlist list box-->
        <ListBox x:Name="playlist_lbox" d:ItemsSource="{Binding playlistItems}" Margin="0,60,644,0" MouseRightButtonUp="playlist_lbox_MouseRightButtonUp">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="20" FontWeight="Bold" Margin="0,0,0,0"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!--Return button-->
        <Button x:Name="return_btn" Content="Return" HorizontalAlignment="Left" Margin="3,0,0,0" VerticalAlignment="Top" Height="55" Width="75" Click="return_btn_Click"/>
        
        <!--Add playlist button-->
        <Button x:Name="createPlaylist_btn" Content="Create new Playlist" HorizontalAlignment="Left" Margin="156,55,0,0" VerticalAlignment="Top" Click="createPlaylist_btn_Click"/>
    </Grid>
</Page>
